<%= render 'shared/header_opaque' %>
<%= render partial: 'shared/metatags', locals: { seo: @article } %>

<!-- Content -->
<div class="content clearfix">
	<!-- Intro Title Section 2 -->
	<div class="section-block intro-title-2" style="background-image: url('<%=  @article.image_url %>')">
		<div class="row">
			<div class="column width-12">
				<div class="title-container">
					<div class="title-container-inner center color-white">
						<h1 class="inline no-margin-bottom"><%= @article.title %></h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Intro Title Section 2 End -->

	<!-- Feature Column Section -->
	<div class="section-block replicable-content">
		<div class="row flex">
			<div class="column width-12 center">
				<div class="post-content center">
					<%= render partial: 'shared/ownership_details', locals: { resource_name: "Artículo compartido", resource: @article } %>
				</div>
				<p class="lead text-medium mb-110"><%= @article.content.html_safe %></p>
			</div>
		</div>
	</div>
	
	<div class="column width-10 offset-1 content-inner blog-regular">
		<div class="post-info boxed">
			<div class="row">
				<div class="column width-6">
					<div class="actions">
						<%= link_to "<span class='icon-left-open-mini'></span> Atrás".html_safe, :back %>
					</div>
				</div>
				<div class="column width-6">
					<div class="actions pull-right">
						<%= render partial: 'shared/share_buttons', locals: { sharable_object: @article } %>
					</div>
				</div>
			</div>
			
			<div class="fb-comment-embed"
			   data-href="<%= seo_for_url(@article) %>"
			   data-width="500"></div>
		</div>
	</div>
</div>
