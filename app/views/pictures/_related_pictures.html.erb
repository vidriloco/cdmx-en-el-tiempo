<% unless pictures.empty? %>
	<div class="section-block pt-110 pb-50 no-padding-top">
		<div class="row">
			<div class="column width-12 content-inner blog-regular">
				<% unless title.blank? %>
					<h3 class="title mt-30 center"><%= title %></h3>
				<% end %>
				<% pictures.each_slice(2) do |pair| %>
					<div class="row content-grid-2">
						<% pair.each do |picture| %>
							<div class="grid-item">
								<div class="thumbnail no-margin-bottom" data-hover-easing="easeInOut" data-hover-speed="500" data-hover-bkg-color="#ffffff" data-hover-bkg-opacity="0.9">
									<a href="<%= picture_path(picture.id, picture.title.parameterize) %>">
										<img src="<%= picture.url %>" alt="" style="transition-duration: 500ms;" height="500" width="760">
									</a>
								</div>
								<div class="mt-20">
									<h4 class="mb-30">
										<a href="<%= picture_path(picture.id, picture.title.parameterize) %>">
											<%= picture.title %>
										</a>
									</h4>
									<!--<h4 class="occupation"><%= year_tag_for(picture.year) %></h4>-->
								</div>
							</div>
						<% end %>
					</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>