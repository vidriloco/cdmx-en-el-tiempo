<div class="section-block replicable-content">
	<div class="row flex">
		<div class="column width-8 push-2 center">
			<p class="lead text-medium">Redescubre la historia de la Ciudad de México</p>
		</div>
	</div>
</div>
<div class="section-block fade-in-progressively no-margins no-padding">
	<div class="row">
		<div class="column width-6 left">
			<h3 class="mb-mobile-50">Las fotografías más recientes</h3>
		</div>
		<div class="column width-12">
			<div class="row">
				<% @recent_pictures.each_slice(2) do |picture_pair| %>
					
					<% picture_pair.each do |picture| %>
						<div class="column width-6">
							<div class="row">
								<div class="thumbnail img-scale-in recent-picture" data-hover-easing="easeInOut" data-hover-speed="500" data-hover-bkg-color="#000000" data-hover-bkg-opacity="0.3">
									<a href="<%= picture_path(picture.id, picture.title.parameterize) %>">
										<div style="width: 100%; height: 500px; background-image: url('<%= picture.url %>'); background-size: cover; background-repeat: no-repeat; background-position: 50% 50%;"></div>
										<span class="overlay-info">
											<span>
												<span>
													<span class="left inline">
														<span class="project-title"><%= picture.title %></span>
														<span class="project-description"><%= seo_for_keywords(picture) %></span>
													</span>
												</span>
											</span>
										</span>
									</a>
								</div>
							</div>
						</div>
					<% end %>
						
				<% end %>
			</div>
		</div>
	</div>
</div>
<div class="section-block">
	<div class="row flex">
		<div class="column width-8 push-2 center">
			<a class="button medium bkg-theme bkg-hover-charcoal color-white color-hover-white text-uppercase" href="<%= pictures_path %>">Ver más fotografías</a>
			<hr>
		</div>
	</div>
</div>